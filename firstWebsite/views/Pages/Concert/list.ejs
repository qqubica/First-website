<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Lista koncertow</h2>
        <% if(concerts.length >= 1){ %>
        <table class="table-list">
            <thead>
            <tr>
                <th>Lokalizacja</th>
                <th>Data początka</th>
                <th>Data końca</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
                <% concerts.forEach(concert => { %>
            <tr>
                <td><%= concert.Venue %></td>


                <td><%= fmt.formatDate(concert.StartDate) %></td>
                <td><%= fmt.formatDate(concert.FinishDate) %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="/concert/details/<%=concert.Id%>" class="list-actions-button-details">Szczegóły</a></li>
                        <li> <a href="/concert/edit/<%=concert.Id%>" class="list-actions-button-edit">Edytuj</a></li>
                        <li><a href="/concert/delete/<%=concert.Id%>" class="list-actions-button-delete">Usuń</a></li>
                    </ul>
                </td>
            </tr>
            <% }); %>
            </tbody>
        </table>
        <% }else{ %>
            <p>Brak koncertów do wyświetlenia</p>
        <% } %>
        <p><a href="/concert/add" class="button-add">Dodaj nowey koncert</a></p>
    </main>
<%- include('../../fragments/footer.ejs') %>